<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.device.DeviceFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/l_50"
        android:paddingBottom="@dimen/l_50">

        <include
            android:id="@+id/home_dev_wrapper"
            layout="@layout/include_device_short_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/l1"
            android:layout_marginEnd="@dimen/l1"
            app:layout_constraintTop_toBottomOf="@+id/home_dev_wrapper" />

        <include
            android:id="@+id/home_display_wrapper"
            layout="@layout/include_display_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/l_50"
            android:layout_marginStart="@dimen/l1"
            android:layout_marginEnd="@dimen/l1"
            app:layout_constraintTop_toBottomOf="@+id/home_display_wrapper" />

        <include
            android:id="@+id/home_memory_wrapper"
            layout="@layout/include_memory_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/l_50"
            android:layout_marginStart="@dimen/l1"
            android:layout_marginEnd="@dimen/l1"
            app:layout_constraintTop_toBottomOf="@+id/home_memory_wrapper" />

        <include
            android:id="@+id/home_soc_wrapper"
            layout="@layout/include_soc_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/l_50"
            android:layout_marginStart="@dimen/l1"
            android:layout_marginEnd="@dimen/l1"
            app:layout_constraintTop_toBottomOf="@+id/home_soc_wrapper" />

        <include
            android:id="@+id/home_battery_wrapper"
            layout="@layout/include_battery_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/l_50"
            android:layout_marginStart="@dimen/l1"
            android:layout_marginEnd="@dimen/l1"
            android:layout_marginBottom="@dimen/l_50"
            app:layout_constraintTop_toBottomOf="@+id/home_battery_wrapper" />

    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>